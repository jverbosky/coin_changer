Here's your change!

<% change.each do |coin, count| %>
  <% if count > 1 %>
    <% if coin == :penny %>
      <p><%= count %> pennies</p>
    <% else %>
      <p><%= count %> <%= coin %>s</p>
    <% end  %>
  <% else %>
    <p><%= count %> <%= coin %></p>
  <% end %>
<% end %>

